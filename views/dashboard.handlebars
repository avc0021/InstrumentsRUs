<section>
    <h2>Create New Post</h2>

    <form class="new-post-form">
        <div>
            <label for="instrument-name">Instrument Name</label>
            <input type="text" id="instrument-name" name="post-title"/>
        </div>
        <div>
            <label for="brand-name">Brand Name</label>
            <input id="brand-name" name="brand-name"/>
        </div>
        <div>
            <label for="price">Price</label>
            <input id="price" name="price"/>
        </div>

        <div id="container">
              <!-- Button calls function 'pickMark()' onclick now -->
              <input type="BUTTON" value="Pick Watermark" id="pickWatermark" onclick="pickMark()">
        </div>
    </form>
</section>


