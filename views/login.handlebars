<section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">

        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

          <form class="login-form" style="width: 23rem;">

            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

            <div class="form-outline mb-4">
              <input type="email" id="email-login" class="form-control form-control-lg" />
              <label class="form-label" for="email-login">Email</label>
            </div>

            <div class="form-outline mb-4">
              <input type="password" id="password-login" class="form-control form-control-lg" />
              <label class="form-label" for="password-login">Password</label>
            </div>

            <div class="pt-1 mb-4">
              <button class="btn btn-info btn-lg btn-block" type="submit">Login</button>
            </div>

          </form>

        </div>

      </div>

      <div class="col-sm-6 text-black">

        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5 col-sm-6 px-0 d-none d-sm-block">

          <form class="signup-form" style="width: 23rem;">

            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign Up</h3>

            <div class="form-outline mb-4">
              <input type="email" id="email-signup" class="form-control form-control-lg" />
              <label class="form-label" for="email-signup">Email</label>
            </div>

            <div class="form-outline mb-4">
              <input type="password" id="password-signup" class="form-control form-control-lg" />
              <label class="form-label" for="password-signup">Password</label>
            </div>

            <div class="pt-1 mb-4">
              <button class="btn btn-info btn-lg btn-block" type="submit">Sign Up & Login</button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="./js/login.js"></script>